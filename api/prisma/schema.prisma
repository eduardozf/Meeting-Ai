generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  name       String
  email      String       @unique
  password   String
  image      String?
  Meet       Meet[]
  UplaodFile UplaodFile[]
}

model Meet {
  id         String       @id @default(auto()) @map("_id") @db.ObjectId
  userId     String       @db.ObjectId
  user       User         @relation(fields: [userId], references: [id])
  UplaodFile UplaodFile[]

  title                 String?
  summary               String?   @default("")
  language              String?   @default("")
  transcription         String?   @default("")
  transcription_context String?   @default("")
  tags                  String[]  @default([])
  people_count          Int?      @default(1)
  date                  DateTime? @default(now())
}

model TokenInvalidate {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  token String @unique
}

model UplaodFile {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
  meetId String @db.ObjectId

  user User @relation(fields: [userId], references: [id])
  meet Meet @relation(fields: [meetId], references: [id])

  type             String @unique
  fileName         String @unique
  originalFileName String @unique
  format           String @unique
  size             Float  @unique
}
